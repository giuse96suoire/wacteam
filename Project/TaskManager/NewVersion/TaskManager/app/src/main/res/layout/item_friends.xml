<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="vertical"
    android:id="@+id/item_friend_parrent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_friend_ava"
            android:layout_width="@dimen/icon_medium_width"
            android:layout_height="@dimen/icon_medium_height"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_ava" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/project_padding"
                android:layout_marginBottom="-10dp"
                android:text="anh kute vo doi "
                android:textSize="@dimen/project_text_size_medium" />

            <TextView
                android:id="@+id/tv_friend_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/project_padding"
                android:text="email@gamil.com "
                android:layout_marginTop="-10dp"
                android:textSize="@dimen/project_text_size_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/icon_small_width"
            android:layout_height="@dimen/icon_small_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            />
    </LinearLayout>


</RelativeLayout>