<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_fragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:text="My Projecqưeqwewqqưewqt"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/project_text_size_medium" />
            <TextView
                android:id="@+id/tv_item_project_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:text="- Create 25/10/2016"
                android:textColor="#696969"
                android:textSize="@dimen/project_text_size_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_project_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_error_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f4284"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/tv_item_project_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Deadline: 20/10/2016"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/project_text_size_small" />

        <TextView
            android:id="@+id/tv_item_project_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Complete: 67%"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/project_text_size_small" />

    </LinearLayout>

</LinearLayout>
