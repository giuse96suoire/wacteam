<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ProjectFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtv_project_name"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten Project"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tmgbtn_project_type"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_p"
                android:layout_marginLeft="10dp"/>
            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                
                <TextView
                    android:id="@+id/txtv_project_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="date"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txtv_project_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deadline"
                    android:textSize="20dp"/>
                
                <TextView
                    android:id="@+id/txtv_project_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="ten nguoi tham gia"
                    android:textSize="18dp"/>
                
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ten task"/>
            
        </RelativeLayout>


    </LinearLayout>
</FrameLayout>
