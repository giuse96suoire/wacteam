<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TodayFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom">

                <ImageView
                    android:id="@+id/imgv_project_list_type"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_p"
                    android:layout_alignParentLeft="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/imgv_project_list_type">

                    <TextView
                        android:id="@+id/txtv_project_list_name"
                        android:textSize="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên Project "
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/txtv_project_list_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textSize="18dp"/>


                </LinearLayout>


                <ImageView
                    android:id="@+id/imgv_project_notifi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_notification"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom">

                <ImageView
                    android:id="@+id/imgv_project_list_type1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_t"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/imgv_project_list_type1">

                    <TextView
                        android:id="@+id/txtv_project_list_name1"
                        android:textSize="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên Project "
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/txtv_project_list_date1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:textSize="18dp"/>


                </LinearLayout>


                <ImageView
                    android:id="@+id/imgv_project_notifi1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_notification"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>

</FrameLayout>
