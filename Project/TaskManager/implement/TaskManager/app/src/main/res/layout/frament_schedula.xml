<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgbtn_schedule_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_schedule_left"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/imgbtn_schedule_left">

                <TextView
                    android:id="@+id/txtv_schedula_weekdays"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekdays"
                    android:paddingLeft="25dp"/>

                <TextView
                    android:id="@+id/txtv_schedula_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="day/month/years"
                    android:textSize="18dp"
                    android:paddingLeft="18dp"/>


            </LinearLayout>


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_schedule_right"
                android:layout_toLeftOf="@+id/imgbtn_schedule_down"/>

            <ImageButton
                android:id="@+id/imgbtn_schedule_down"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_schedula_down"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
            android:background="@drawable/border_bottom"
            android:padding="0dp">

            <TextView
                android:id="@+id/txtv_schedula_hours1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="hours"
                android:textSize="24dp"
                android:background="@drawable/border_right"/>

            <TextView
                android:id="@+id/txtv_schedula_todo1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="to do"
                android:textSize="26dp"
                android:padding="8dp"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>