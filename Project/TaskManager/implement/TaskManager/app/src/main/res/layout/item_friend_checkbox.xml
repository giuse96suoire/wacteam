<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_friend_parrent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_friend_ava"

            android:layout_width="@dimen/icon_small_width"


            android:layout_height="@dimen/icon_small_height"


            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_ava" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/project_padding">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anh kute vo doi "

                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/project_text_size_small" />


            <TextView
                android:id="@+id/tv_friend_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@gmail.com "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/iv_more"
            android:layout_width="@dimen/icon_small_width"
            android:layout_height="@dimen/icon_small_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center" />
    </LinearLayout>


</RelativeLayout>