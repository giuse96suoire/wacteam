<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_friend_ava"
        android:layout_width="@dimen/icon_medium_width"
        android:layout_height="@dimen/icon_medium_height"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_ava" />

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_friend_ava"
        android:padding="@dimen/project_padding"
        android:text="anh kute vo doi "
        android:textSize="@dimen/project_text_size_medium" />

    <ImageView
        android:id="@+id/tv_friend_more"
        android:layout_width="@dimen/icon_small_width"
        android:layout_height="@dimen/icon_small_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_more_friend" />

</RelativeLayout>