<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/project_padding"
        android:paddingRight="@dimen/project_padding">



            <TextView
                android:maxWidth="@dimen/max_width"
                android:maxHeight="@dimen/max_height_medium"
                android:paddingLeft="@dimen/project_padding"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_item_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="My Project fdgfdhfhgf fsdgdgfdgdsgsgsdgsdgsdgdfdh"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/project_text_size_medium" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/project_padding"
                android:paddingTop="@dimen/project_padding">

                <ImageView
                    android:id="@+id/iv_item_project_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_error_black_24dp"
                    android:layout_gravity="right"
                    />



            </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f4284"
        android:orientation="horizontal"
        android:padding="8dp">



        <TextView
            android:id="@+id/tv_item_project_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Deadline20/10/2016"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/project_text_size_small" />

        <TextView
            android:id="@+id/tv_item_project_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Complete: 67%"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/project_text_size_small" />

    </LinearLayout>

</LinearLayout>
