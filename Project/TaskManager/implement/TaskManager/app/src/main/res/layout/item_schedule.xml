<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:padding="0dp">

        <TextView
            android:id="@+id/txtv_schedula_hours1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hours_item_schedule"
            android:textStyle="bold"
            android:textSize="@dimen/project_text_size_medium"
            android:background="@drawable/border_right"/>

        <TextView
            android:id="@+id/txtv_schedula_todo1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/to_do_item_schedule"
            android:textSize="@dimen/project_text_size_medium"
            android:padding="@dimen/project_padding"/>



</LinearLayout>