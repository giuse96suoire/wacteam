<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_project_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_fragment"
            android:text="My Project"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/project_name_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_fragment"
            android:paddingLeft="@dimen/padding_fragment">



            <TextView
                android:id="@+id/tv_project_dialog_create_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="Deadline: 22/10/2016"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical"
        android:padding="@dimen/padding_fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_total_complete_48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete: 69%"
                android:id="@+id/tv_project_dialog_complete"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_leader_48" />
            <TextView
                android:id="@+id/tv_project_dialog_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leader: Hoang Huynh"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_team_48"
                />
            <TextView
                android:id="@+id/tv_project_dialog_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team members: 9"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_total_48"
                />
            <TextView
                android:id="@+id/tv_project_dialog_total_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total task: 19"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_complete_48"
                />
            <TextView
                android:id="@+id/tv_project_dialog_total_task_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task complete: 9"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_small_width"
                android:layout_height="@dimen/icon_small_height"
                android:src="@drawable/ic_failed_48"
                />
            <TextView
                android:id="@+id/tv_project_dialog_total_task_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task failed: 10"
                android:textSize="@dimen/project_text_size_medium" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
